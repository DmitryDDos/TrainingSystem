@model trSys.DTOs.ModuleDetailsDto
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="~/css/modules_style.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="card shadow">
        <!-- Шапка модуля -->
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">@Model.Title</h3>

                @if (User.IsInRole("Admin"))
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn button1">
                            <i class="fas fa-edit"></i> Редактировать
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn button2">
                            <i class="fas fa-trash"></i> Удалить
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Основное содержимое -->
        <div class="card-body">
            <!-- Описание модуля -->
            <div class="mb-4">
                <h5 class="border-bottom pb-2">Описание модуля</h5>
                <p class="mt-3">@(Model.Description ?? "Описание отсутствует")</p>
            </div>

            <!-- Список уроков -->
            <div class="d-flex justify-content-between align-items-center mt-4">
                <h5 class="border-bottom pb-2 mb-0">Уроки модуля</h5>

                @if (User.IsInRole("Admin"))
                {
                    <a asp-controller="Lessons"
                       asp-action="Create"
                       asp-route-moduleId="@Model.Id"
                       class="btn button1">
                        <i class="fas fa-plus"></i> Добавить урок
                    </a>
                }
            </div>
            <div class="d-flex justify-content-between align-items-center mt-5">
                <h5 class="border-bottom pb-2 mb-0">Тесты модуля</h5>
                @if (Model.Lessons.Any())
                {
                    <div class="list-group mt-3">
                        @foreach (var lesson in Model.Lessons)
                        {
                            <div class="list-group-item list-group-item-action p-0">
                                <a asp-controller="Lessons"
                                   asp-action="Details"
                                   asp-route-id="@lesson.Id"
                                   class="d-block p-3 text-decoration-none text-dark">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6>@lesson.Title</h6>
                                            <p class="mb-1 text-muted">@(lesson.Description ?? "Описание отсутствует")</p>
                                        </div>
                                    </div>
                                </a>

                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="lesson-actions bg-light p-2 border-top">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Lessons"
                                               asp-action="Edit"
                                               asp-route-id="@lesson.Id"
                                               class="btn button1">
                                                <i class="fas fa-edit"></i> Редактировать
                                            </a>
                                            <a asp-controller="Lessons"
                                               asp-action="Delete"
                                               asp-route-id="@lesson.Id"
                                               class="btn button2">
                                                <i class="fas fa-trash"></i> Удалить
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-3">
                        <i class="fas fa-info-circle"></i> В этом модуле пока нет уроков
                    </div>
                }

        </div>
    </div>

    <!-- Кнопка возврата -->
    <a asp-controller="Course"
       asp-action="Details"
       asp-route-id="@Model.CourseId"
       class="btn button2">
        <i class="fas fa-arrow-left"></i> Вернуться к курсу
    </a>
</div>