@model trSys.DTOs.ModuleDetailsDto
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = Model.Title;
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="module-container">
    <div class="module-card">
        <div class="module-card-header">
            <h3 class="module-card-title">@Model.Title</h3>

            @if (User.IsInRole("Admin"))
            {
                <div class="btn-group">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="module-btn module-btn-warning">
                        <i class="fas fa-edit"></i> Редактировать
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="module-btn module-btn-danger">
                        <i class="fas fa-trash-alt"></i> Удалить
                    </a>
                </div>
            }
        </div>

        <div class="module-card-body">
            <div class="section">
                <h5 class="section-title">Описание модуля</h5>
                <p>@(Model.Description ?? "Описание отсутствует")</p>
            </div>

            <div class="section">
                <div class="section-header">
                    <h5 class="section-title">Уроки модуля</h5>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Lessons" asp-action="Create" asp-route-moduleId="@Model.Id"
                           class="module-btn module-btn-primary">
                            <i class="fas fa-plus"></i> Добавить урок
                        </a>
                    }
                </div>

                @if (Model.Lessons.Any())
                {
                    <div class="module-list">
                        @foreach (var lesson in Model.Lessons)
                        {
                            <div class="module-list-item">
                                <div class="module-list-content">
                                    <h6 class="module-list-title">@lesson.Title</h6>
                                    <p class="module-list-description">@(lesson.Description ?? "Описание отсутствует")</p>
                                </div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <a asp-controller="Lessons" asp-action="Edit" asp-route-id="@lesson.Id"
                                           class="module-btn module-btn-warning">
                                            <i class="fas fa-edit"></i> Редактировать
                                        </a>
                                        <a asp-controller="Lessons" asp-action="Delete" asp-route-id="@lesson.Id"
                                           class="module-btn module-btn-danger">
                                            <i class="fas fa-trash-alt"></i> Удалить
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="module-alert module-alert-info">
                        <i class="fas fa-info-circle"></i> В этом модуле пока нет уроков
                    </div>
                }
            </div>

            <div class="section">
                <div class="section-header">
                    <h5 class="section-title">Тесты модуля</h5>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Tests" asp-action="Create" asp-route-moduleId="@Model.Id"
                           class="module-btn module-btn-primary">
                            <i class="fas fa-plus"></i> Добавить тест
                        </a>
                    }
                </div>

                @if (Model.Tests.Any())
                {
                    <div class="module-list">
                        @foreach (var test in Model.Tests)
                        {
                            <div class="module-list-item">
                                <div class="module-list-content">
                                    <h6 class="module-list-title">@test.Title</h6>
                                    <p class="module-list-description">@(test.Description ?? "Описание отсутствует")</p>
                                </div>
                                @if (User.IsInRole("Admin"))
                                {
                                    <div class="btn-group">
                                        <a asp-controller="Tests" asp-action="Edit" asp-route-id="@test.Id"
                                           class="module-btn module-btn-warning">
                                            <i class="fas fa-edit"></i> Редактировать
                                        </a>
                                        <a asp-controller="Tests" asp-action="Delete" asp-route-id="@test.Id"
                                           class="module-btn module-btn-danger">
                                            <i class="fas fa-trash-alt"></i> Удалить
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="module-alert module-alert-info">
                        <i class="fas fa-info-circle"></i> В этом модуле пока нет тестов
                    </div>
                }
            </div>
        </div>
    </div>

    <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId"
       class="module-btn module-btn-secondary">
        <i class="fas fa-arrow-left"></i> Вернуться к курсу
    </a>
</div>