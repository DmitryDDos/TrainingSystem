@model trSys.Models.Module

@{
    ViewData["Title"] = "Удаление модуля";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-4">
    <div class="form-container" style="max-width: 600px; margin: auto;">
        <!-- Ограничиваем ширину -->
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="module-alert module-alert-danger mb-4">
            <h5><i class="fas fa-exclamation-triangle"></i> Вы уверены, что хотите безвозвратно удалить модуль?</h5>
            <ul>
                <li>Будет удалена вся связанная информация</li>
                <li>Действие нельзя отменить</li>
            </ul>
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-4 text-muted">ID модуля:</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4 text-muted">Название:</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4 text-muted">Курс:</dt>
            <dd class="col-sm-8">@(ViewData["CourseTitle"] ?? "Не указан")</dd>
        </dl>

        <form asp-action="Delete" asp-controller="Modules" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-2">
                <button type="submit" class="module-btn module-btn-danger">
                    <i class="fas fa-trash-alt"></i> Подтвердить удаление
                </button>
                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId" class="module-btn module-btn-secondary">
                    <i class="fas fa-times"></i> Отмена
                </a>
            </div>
        </form>
    </div>
</div>