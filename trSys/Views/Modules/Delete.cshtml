@model trSys.Models.Module

@{
    ViewData["Title"] = "Удаление модуля"; // Исправляем заголовок
}

<link rel="stylesheet" href="~/css/courses_style.css" asp-append-version="true" />

<style>
    .form-container {
        background-color: #FFFFFF;
        border-radius: 0.5rem;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        /* Опционально, чтобы отделить от фона */
        margin-top: 20px;
    }
</style>

<div class="container mt-4">
    <div class="form-container">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="alert alert-danger">
            <h5 class="mb-3">❗ Вы уверены, что хотите безвозвратно удалить модуль?</h5> <!-- Исправляем текст -->
            <ul class="mb-0">
                <li>Будет удалена вся связанная информация</li>
                <li>Действие нельзя отменить</li>
            </ul>
        </div>

        <div class="card border-danger mb-4">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 text-muted">ID модуля:</dt> <!-- Исправляем -->
                    <dd class="col-sm-8">@Model.Id</dd>

                    <dt class="col-sm-4 text-muted">Название:</dt>
                    <dd class="col-sm-8">@Model.Title</dd>

                    <dt class="col-sm-4 text-muted">Курс:</dt> <!-- Добавляем информацию о курсе -->
                    <dd class="col-sm-8">@(ViewData["CourseTitle"] ?? "Не указан")</dd>
                </dl>
            </div>
        </div>

        <form asp-action="Delete" asp-controller="Modules" method="post">
            <input type="hidden" asp-for="Id" />
            @Html.AntiForgeryToken()

            <div class="d-flex gap-2 align-items-center">
                <button type="submit" class="btn button1">
                    <i class="bi bi-trash3 me-2"></i>Подтвердить удаление
                </button>
                <!-- Исправляем ссылку отмены -->
                <a asp-controller="Course"
                   asp-action="Details"
                   asp-route-id="@Model.CourseId"
                   class="btn button2">
                    <i class="bi bi-x-circle me-2"></i>Отмена
                </a>
            </div>
        </form>
    </div>
</div>