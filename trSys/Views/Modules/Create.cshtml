@model trSys.DTOs.ModuleCreateDto

@{
    ViewData["Title"] = $"Создание модуля для курса: {ViewData["CourseTitle"]}";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="module-container">
    <h2 class="module-header">@ViewData["Title"]</h2>

    <form asp-action="Create" asp-controller="Modules" method="post" class="module-form">
        <div asp-validation-summary="ModelOnly" class="module-alert module-alert-danger"></div>

        <input type="hidden" asp-for="CourseId" />

        <div class="form-group">
            <label asp-for="Title" class="form-label">Название модуля</label>
            <div class="input-container">
                <input asp-for="Title" class="form-control" placeholder="Введите название" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Описание</label>
            <div class="input-container">
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>

        <div class="btn-group">
            <button type="submit" class="module-btn module-btn-primary">
                <i class="fas fa-plus"></i> Создать
            </button>
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId"
               class="module-btn module-btn-secondary">
                <i class="fas fa-arrow-left"></i> Назад к курсу
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}