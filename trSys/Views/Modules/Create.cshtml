@model trSys.DTOs.ModuleCreateDto

@{
    ViewData["Title"] = $"Создание модуля для курса: {ViewData["CourseTitle"]}";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<div class="container mt-4">
    <div class="form-container" style="max-width: 600px; margin: auto;">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <form asp-action="Create" asp-controller="Modules" method="post" class="module-form">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="CourseId" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Название модуля</label>
                <input asp-for="Title" class="form-control" placeholder="Введите название" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Описание</label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="module-btn module-btn-primary">
                    <i class="fas fa-plus"></i> Создать
                </button>
                <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId" class="module-btn module-btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад к курсу
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
