@model trSys.DTOs.ModuleCreateDto

@{
    ViewData["Title"] = $"Создание модуля для курса: {ViewData["CourseTitle"]}";
}

<link rel="stylesheet" href="~/css/courses_style.css" />

<style>
    .form-container {
        background-color: #FFFFFF;
        border-radius: 0.5rem;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        /* Опционально, чтобы отделить от фона */
        margin-top: 20px;
    }
</style>

<div class="container mt-4">
    <div class="form-container">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" asp-controller="Modules" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Скрытое поле для CourseId -->
        <input type="hidden" asp-for="CourseId" />

        <!-- Поле: Название -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Название модуля</label>
            <input asp-for="Title" class="form-control" placeholder="Введите название" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Поле: Описание -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Кнопки -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn button1">Создать</button>
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId"
               class="btn button2">
                Назад к курсу
            </a>
        </div>
    </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}