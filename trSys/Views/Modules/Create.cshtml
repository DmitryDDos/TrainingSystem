@model trSys.DTOs.ModuleCreateDto

@{
    ViewData["Title"] = $"Создание модуля для курса: {ViewData["CourseTitle"]}";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" asp-controller="Modules" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <!-- Скрытое поле для CourseId -->
        <input type="hidden" asp-for="CourseId" />

        <!-- Поле: Название -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Название модуля</label>
            <input asp-for="Title" class="form-control" placeholder="Введите название" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Поле: Описание -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Описание</label>
            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Введите описание"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Кнопки -->
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Создать</button>
            <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.CourseId"
               class="btn btn-outline-secondary">
                Назад к курсу
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}