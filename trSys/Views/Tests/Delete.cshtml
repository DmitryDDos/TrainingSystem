@model trSys.Models.Test

@{
    ViewData["Title"] = "Удаление теста";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="form-container" style="max-width: 600px; margin: auto;">
        <h2>@ViewData["Title"]</h2>
        <hr />

        <div class="module-alert module-alert-danger mb-4">
            <h5><i class="fas fa-exclamation-triangle"></i> Вы уверены, что хотите безвозвратно удалить тест?</h5>
            <ul>
                <li>Будет удалена вся связанная информация</li>
                <li>Действие нельзя отменить</li>
            </ul>
        </div>

        <dl class="row mb-4">
            <dt class="col-sm-4 text-muted">ID теста:</dt>
            <dd class="col-sm-8">@Model.Id</dd>

            <dt class="col-sm-4 text-muted">Название:</dt>
            <dd class="col-sm-8">@Model.Title</dd>

            <dt class="col-sm-4 text-muted">Описание:</dt>
            <dd class="col-sm-8">@Model.Description</dd>
        </dl>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-2">
                <button type="submit" class="module-btn module-btn-danger">
                    <svg class="trash-icon" viewBox="2 1 20 16" width="18" height="18">
                        <path fill="#ffffff" d="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z" />
                    </svg> Подтвердить удаление
                </button>
                <a asp-controller="Modules" asp-action="Details" asp-route-id="@Model.ModuleId" class="module-btn module-btn-secondary">
                    <span class="icon">✕</span> Отмена
                </a>
            </div>
        </form>
    </div>
</div>
