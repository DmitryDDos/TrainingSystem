@model trSys.DTOs.TestWithQuestionsDto

@{
    ViewData["Title"] = "Детали теста";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название:</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Описание:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">ID модуля:</dt>
        <dd class="col-sm-10">@Model.ModuleId</dd>
    </dl>

    <h5>Вопросы теста:</h5>
    @if (Model.Questions.Any())
    {
            <ul class="list-group">
            @foreach (var question in Model.Questions)
            {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                    @question.Text
                            @* <div>
                                <a href="#" class="btn btn-sm btn-outline-secondary">Редактировать</a>
                                <a href="#" class="btn btn-sm btn-outline-danger">Удалить</a>
                            </div> *@
                        </li>
            }
            </ul>
    }
    else
    {
            <div class="alert alert-warning">Вопросы отсутствуют</div>
    }
</div>
<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Редактировать</a>
    <a asp-action="ManageQuestions" asp-route-id="@Model.Id" class="btn btn-success">Управление вопросами</a>
    <a asp-controller="Modules"
       asp-action="Details"
       asp-route-id="@Model.ModuleId"
       class="btn btn-outline-secondary">
        отмена
    </a>
</div>
