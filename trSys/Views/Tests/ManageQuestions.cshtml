@model IEnumerable<trSys.DTOs.QuestionDto>
@{
    ViewData["Title"] = $"Управление вопросами теста: {ViewBag.TestTitle}";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" asp-controller="Questions" asp-route-testId="@ViewBag.TestId"
       class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Добавить вопрос
    </a>
    <a asp-action="Details" asp-route-id="@ViewBag.TestId" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Назад к тесту
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Текст вопроса</th>
            <th>Тип</th>
            <th>Ответов</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Text</td>
                <td>@question.Type</td>
                <td>@question.Answers.Count()</td>
                <td>
                    <div class="btn-group btn-group-sm">
                        <a asp-action="Edit" asp-controller="Questions" asp-route-id="@question.Id"
                           class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Редактировать
                        </a>
                        <form asp-action="Delete" asp-controller="Questions" asp-route-id="@question.Id"
                              method="post" onsubmit="return confirm('Удалить этот вопрос?');">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash"></i> Удалить
                            </button>
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
