@model trSys.DTOs.TestCreateDto

@{
    ViewData["Title"] = $"Создание теста для модуля: {ViewData["ModuleTitle"]}";
}

<style>
    .create-test-container {
        max-width: 800px;
        margin: 2rem auto;
        padding: 2rem;
        background: #FFFFFF; /* белый */
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

    .create-test-header {
        margin-bottom: 2rem;
        border-bottom: 1px solid #E8F1F6; /* светло-синий */
    }

        .create-test-header h2 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #3F6578; /* темно-синий */
            margin: 0;
        }

    .form-label {
        display: flex;
        align-items: center;
        font-weight: 500;
        color: #212121; /* черный */
        margin-bottom: 0.5rem;
    }

    .form-control-custom {
        border: 1px solid #E8F1F6; /* светло-синий */
        border-radius: 8px;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.3s;
        width: 100%;
        background-color: #FFFFFF; /* белый */
    }

        .form-control-custom:focus {
            border-color: #00C0C9; /* бирюзовый */
            box-shadow: 0 0 0 3px rgba(0, 192, 201, 0.15);
            outline: none;
        }

    .btn-primary-custom {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background: #00C0C9; /* бирюзовый */
        border: none;
        color: white;
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
        box-shadow: 0 4px 6px rgba(0, 192, 201, 0.2);
        cursor: pointer;
    }

        .btn-primary-custom:hover {
            background: #3F6578; /* темно-синий */
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(63, 101, 120, 0.3);
        }

    .btn-outline-custom {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #FF8769; /* оранжевый */
        color: #FF8769; /* оранжевый */
        padding: 0.75rem 1.5rem;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.3s;
        text-decoration: none;
    }

        .btn-outline-custom:hover {
            background-color: #FF8769; /* оранжевый */
            color: white;
            text-decoration: none;
        }

    .text-danger {
        color: #FF8769; /* оранжевый */
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>

<div class="create-test-container">
    <div class="create-test-header">
        <h2>@ViewData["Title"]</h2>
    </div>
    <hr />

    <form asp-action="Create" asp-controller="Tests" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="ModuleId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Название Теста</label>
            <input asp-for="Title" class="form-control-custom" placeholder="Введите название" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Краткое описание</label>
            <textarea asp-for="Description" class="form-control-custom" rows="2" placeholder="Введите описание"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn-primary-custom">Создать</button>
            <a asp-controller="Modules"
               asp-action="Details"
               asp-route-id="@Model.ModuleId"
               class="btn-outline-custom">
                Назад к модулю
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}