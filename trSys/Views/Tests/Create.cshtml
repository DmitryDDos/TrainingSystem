@model trSys.DTOs.TestCreateDto

@{
    ViewData["Title"] = $"Создание теста для модуля: {ViewData["ModuleTitle"]}";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form asp-action="Create" asp-controller="Tests" method="post" class="needs-validation" novalidate>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

        <input type="hidden" asp-for="ModuleId" />

        <div class="mb-3">
            <label asp-for="Title" class="form-label">Название Теста</label>
            <input asp-for="Title" class="form-control" placeholder="Введите название" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Краткое описание</label>
            <textarea asp-for="Description" class="form-control" rows="2" placeholder="Введите описание"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Создать</button>
            <a asp-controller="Modules"
               asp-action="Details"
               asp-route-id="@Model.ModuleId"
               class="btn btn-outline-secondary">
                Назад к модулю
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}