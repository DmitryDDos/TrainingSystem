  @model trSys.Models.Course

@{
    ViewData["Title"] = "Удаление курса";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <div class="alert alert-danger">
        <h5 class="mb-3">❗ Вы уверены, что хотите безвозвратно удалить курс?</h5>
        <ul class="mb-0">
            <li>Будет удалена вся связанная информация</li>
            <li>Действие нельзя отменить</li>
        </ul>
    </div>

    <div class="card border-danger mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4 text-muted">ID курса:</dt>
                <dd class="col-sm-8">@Model.Id</dd>

                <dt class="col-sm-4 text-muted">Название:</dt>
                <dd class="col-sm-8">@Model.Title</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" asp-controller="Course" method="post">
        <input type="hidden" asp-for="Id" />
        @Html.AntiForgeryToken()

        <div class="d-flex gap-2 align-items-center">
            <button type="submit" class="btn btn-danger px-4">
                <i class="bi bi-trash3 me-2"></i>Подтвердить удаление
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
                <i class="bi bi-x-circle me-2"></i>Отмена
            </a>
        </div>
    </form>

</div>