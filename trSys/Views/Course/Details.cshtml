@model trSys.Models.Course
@using trSys.Interfaces
@inject ICourseRegistrationService RegistrationService
@{
    ViewData["Title"] = Model.Title;
    var userId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));
    var isRegistered = await RegistrationService.CheckAccessAsync(userId, Model.Id);
}

<div class="container mt-4">
    <div class="card shadow">
        <!-- Обложка курса -->
        @if (Model.CoverImage != null)
        {
            <img src="@Url.Content($"/api/File/{Model.CoverImage.Id}")"
                 class="card-img-top"
                 alt="Обложка курса"
                 style="height: 180px; object-fit: cover;">
        }

        <!-- Заголовок с кнопками администрирования -->
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">@Model.Title</h3>

                @if (User.IsInRole("Admin"))
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">
                            <i class="fas fa-edit"></i> Редактировать
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger ml-2">
                            <i class="fas fa-trash"></i> Удалить
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Основное содержимое -->
        <div class="card-body">
            <div class="row">
                <!-- Левая колонка: Описание и модули -->
                <div class="col-md-8">
                    <h5 class="border-bottom pb-2">Описание</h5>
                    <p class="mt-3">@Model.Description</p>

                    @if (Model.Modules.Any())
                    {
                        <h5 class="mt-4 border-bottom pb-2">Модули курса</h5>
                        <div class="list-group mt-3">
                            @foreach (var module in Model.Modules)
                            {
                                <div class="list-group-item">
                                    <h6>@module.Title</h6>
                                    <p class="mb-1">@module.Description</p>
                                </div>
                            }
                        </div>
                    }
                </div>

                <!-- Правая колонка: Регистрация -->
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-body">
                            @if (isRegistered.HasAccess)
                            {
                                <div class="alert alert-success mb-0">
                                    <i class="fas fa-check-circle"></i> Вы уже записаны на этот курс
                                </div>
                            }
                            else
                            {
                                <form asp-controller="CourseRegistration" asp-action="Register" method="post">
                                    <input type="hidden" name="CourseId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success btn-block">
                                        <i class="fas fa-user-plus"></i> Записаться на курс
                                    </button>
                                </form>

                                @if (!string.IsNullOrEmpty(isRegistered.ErrorMessage))
                                {
                                    <div class="alert alert-danger mt-3 mb-0">
                                        <i class="fas fa-exclamation-triangle"></i> @isRegistered.ErrorMessage
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Кнопка возврата -->
    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="fas fa-arrow-left"></i> Вернуться к списку курсов
    </a>
</div>
