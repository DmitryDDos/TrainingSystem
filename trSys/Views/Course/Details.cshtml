@* @model CourseDto
@{
    ViewData["Title"] = "Подробная информация о курсе";
} *@

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Название:</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Описание:</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Дата начала:</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("dd.MM.yyyy")</dd>

        <dt class="col-sm-2">Продолжительность:</dt>
        <dd class="col-sm-10">@Model.Duration дней</dd>

        <dt class="col-sm-2">Преподаватель:</dt>
        <dd class="col-sm-10">@Model.InstructorName</dd>

        <dt class="col-sm-2">Количество студентов:</dt>
        <dd class="col-sm-10">@Model.StudentsCount</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Вернуться к списку</a>
</div>