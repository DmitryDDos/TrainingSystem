@model trSys.DTOs.CourseDetailsDto
@using trSys.Interfaces
@inject ICourseRegistrationService RegistrationService
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Title;
    var userId = int.Parse(User.FindFirstValue(ClaimTypes.NameIdentifier));
    var accessCheck = await RegistrationService.CheckAccessAsync(userId, Model.Id);
}

<link rel="stylesheet" href="~/css/modules_style.css" asp-append-version="true" />

<aside class="sidebar">
    <form asp-controller="CourseRegistration" asp-action="Register" method="post">
        <input type="hidden" name="CourseId" value="@Model.Id" />
        <button type="submit" class="btn button">
            <i class="fas fa-user-plus"></i> Записаться на курс
        </button>
    </form>

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Modules"
           asp-action="Create"
           asp-route-courseId="@Model.Id"
           class="btn button1" style="margin-top: 5px;">
            <i class="fas fa-plus"></i> Добавить модуль
        </a>
    }

    <!-- Кнопка "Начать курс", которая перенаправляет на Index.cshtml -->
    <a asp-controller="CourseLearning" asp-action="Index" asp-route-courseId="@Model.Id" class="btn button" style="margin-top: 5px;">
        <i class="fas fa-play"></i> Начать курс
    </a>

    <a asp-action="Index" class="btn button" style="margin-top: auto; display: inline-flex; align-items: center;">
        <i class="fas fa-arrow-left" style="margin-right: 6px;"></i> Вернуться к списку курсов
    </a>
</aside>

<main class="main-content">
    <h1 class="page-title">@Model.Title</h1>

    <div class="card shadow mb-4">
        <div class="card-body">
            @if (Model.Modules.Any())
            {
                <div class="modules-grid mt-3">
                    @foreach (var module in Model.Modules)
                    {
                        <div class="module-card">
                            <a asp-controller="Modules"
                               asp-action="Details"
                               asp-route-id="@module.Id"
                               class="d-block text-decoration-none text-dark">
                                <h6 class="module-title">@module.Title</h6>
                                <p class="module-description">@module.Description</p>
                            </a>

                            @if (User.IsInRole("Admin"))
                            {
                                <div class="module-actions bg-light p-2 border-top">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="Modules"
                                           asp-action="Edit"
                                           asp-route-id="@module.Id"
                                           class="btn button1">
                                            <i class="fas fa-edit"></i> Редактировать
                                        </a>
                                        <a asp-controller="Modules"
                                           asp-action="Delete"
                                           asp-route-id="@module.Id"
                                           class="btn button2">
                                            <i class="fas fa-trash"></i> Удалить
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
            else
            {
                <p>Модули отсутствуют.</p>
            }
        </div>
    </div>
</main>
