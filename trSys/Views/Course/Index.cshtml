@model IEnumerable<Course>
@{
    ViewData["Title"] = "Список курсов";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Создать новый курс</a>
    <a asp-action="CustomCreate" class="btn btn-secondary">Создать (расширенный)</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Дата начала</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                @* <td>@item.StartDate.ToString("dd.MM.yyyy")</td> *@
                <td>
                    @* <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Подробнее</a> *@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Редактировать</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Удалить</a>
                    @* <a asp-action="DetailsExtended" asp-route-id="@item.Id" class="btn btn-secondary">Расширенные данные</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>