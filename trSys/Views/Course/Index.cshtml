@model IEnumerable<Course>
@{
    ViewData["Title"] = "Все курсы";
}

<div class="container mt-4">
    <h2 class="mb-4">Доступные курсы</h2>

    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-4 mb-4">
                <a asp-action="Details" asp-route-id="@course.Id" class="card-link text-decoration-none">
                    <div class="card h-100 hover-shadow">
                        <div class="card-body">
                            <h5 class="card-title">@course.Title</h5>
                            <p class="card-text text-muted">
                                @(course.Description.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)
                            </p>
                        </div>
                        <div class="card-footer bg-transparent">
                            <span class="btn btn-outline-primary">Подробнее</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    .card-link:hover .hover-shadow {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        transition: box-shadow 0.3s ease;
    }
    .card-link .card {
        transition: transform 0.3s ease;
    }
    .card-link:hover .card {
        transform: translateY(-2px);
    }
</style>
