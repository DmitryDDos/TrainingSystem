@model IEnumerable<trSys.Models.Course>
@{
    ViewData["Title"] = "Все курсы";
}

<div class="container mt-4">
    <h2 class="mb-4">Доступные курсы</h2>

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-4">
            <a asp-action="Create" class="button">
                <i class="fas fa-plus"></i> Создать новый курс
            </a>
        </div>
    }

    <div class="courses-grid">
        @foreach (var course in Model)
        {
            <div class="course-card">
                <a asp-action="Details" asp-controller="Course" asp-route-id="@course.Id" class="text-decoration-none" style="color: inherit;">
                    <div class="card-image">
                        @if (course.CoverImageId != null)
                        {
                            <img src="@Url.Content($"/api/File/{course.CoverImageId}")" alt="Обложка курса" style="height:160px; object-fit:cover; width:100%;" />
                        }
                        else
                        {
                            <div style="height:160px; display:flex; align-items:center; justify-content:center; background-color:#6c757d;">
                                <i class="fas fa-book-open text-white" style="font-size:3rem;"></i>
                            </div>
                        }
                    </div>
                    <div class="card-content">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-description">
                            @(course.Description?.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)
                        </p>
                        <div class="card-actions">
                            <span class="btn btn-outline-primary">Подробнее</span>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>
