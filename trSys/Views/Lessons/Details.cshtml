@{
    Layout = "_Layout";
    ViewData["Title"] = "Уроки";
}

<link rel="stylesheet" href="/css/lessons_style.css" />

<aside class="sidebar">
    <!-- Здесь можно вставить свою проверку -->
    <button class="btn-create-lesson" onclick="location.href='@Url.Action("Create", "Lessons")'">Создать урок</button>
</aside>

<main class="main-content">
    <h1 class="page-title">Уроки</h1>

    <div class="courses-grid">
        @* Здесь будет динамическое отображение уроков *@
        @foreach (var lesson in Model) // Предполагаем, что Model - это список уроков
        {
            <article class="course-card">
                <h3 class="course-title">@lesson.Title</h3>
                <p class="course-description">@lesson.Description</p>
                <a href="@Url.Action("Start", "Lessons", new { id = lesson.Id })" class="button1">Начать урок</a>
            </article>
        }
    </div>
</main>
