@model trSys.DTOs.LessonCreateDto

@{
    ViewData["Title"] = $"Создание урока для модуля: {ViewData["ModuleTitle"]}";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="form-container" style="max-width: 600px; margin: auto;">
        <h2>@ViewData["Title"]</h2>
        <hr />
        <form asp-action="Create" asp-controller="Lessons" method="post" class="module-form needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input type="hidden" asp-for="ModuleId" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Название урока</label>
                <input asp-for="Title" class="form-control" placeholder="Введите название" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Описание урока</label>
                <textarea asp-for="Description" class="form-control" rows="2" placeholder="Введите описание"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2">
                <button type="submit" class="module-btn module-btn-primary">
                    <span class="icon">+</span> Создать
                </button>
                <a asp-controller="Modules"
                   asp-action="Details"
                   asp-route-id="@Model.ModuleId"
                   class="module-btn module-btn-secondary">
                    <i class="fas fa-arrow-left"></i> Назад к модулю
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
