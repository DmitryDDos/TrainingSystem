@model trSys.DTOs.LessonUpdateDto

@{
    ViewData["Title"] = $"Редактирование урока: {Model.Title}";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />

<div class="container mt-4">
    <div class="form-container" style="max-width: 600px; margin: auto;">
        <h2>@ViewData["Title"]</h2>
        <p class="text-muted">Модуль: @ViewData["ModuleTitle"]</p>
        <hr />

        <form asp-action="Edit" method="post" class="module-form">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ModuleId" />

            <div class="form-group mb-3">
                <label asp-for="Title" class="form-label">Название урока</label>
                <input asp-for="Title" class="form-control" required />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Краткое описание</label>
                <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="module-btn module-btn-primary">
                    <svg class="save-icon" viewBox="0 0 24 24" width="18" height="18">
                        <path fill="#ffffff" d="M15 9H5V5h10m-3 14a3 3 0 0 1-3-3 3 3 0 0 1 3-3 3 3 0 0 1 3 3 3 3 0 0 1-3 3m5-16H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V7l-4-4z" />
                    </svg> Сохранить
                </button>
                <a asp-controller="Modules"
                   asp-action="Details"
                   asp-route-id="@Model.ModuleId"
                   class="module-btn module-btn-secondary">
                    <span class="icon">✕</span> Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
