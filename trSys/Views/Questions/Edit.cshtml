@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('answers-container');
            const addBtn = document.getElementById('add-answer');
            let counter = @Model.Answers.Count;

            addBtn.addEventListener('click', () => {
                const div = document.createElement('div');
                div.className = 'answer-item mb-2 p-2 border';
                div.innerHTML = `
                    <div class="row">
                        <div class="col-8">
                            <input name="Answers[${counter}].Text" class="form-control"
                                   placeholder="Текст ответа" required />
                        </div>
                        <div class="col-2">
                            <div class="form-check">
                                <input name="Answers[${counter}].IsCorrect" type="checkbox"
                                       class="form-check-input" />
                                <label class="form-check-label">Правильный</label>
                            </div>
                        </div>
                        <div class="col-2">
                            <button type="button" class="btn btn-sm btn-danger remove-answer">×</button>
                        </div>
                    </div>
                `;
                container.appendChild(div);
                counter++;
            });

            container.addEventListener('click', (e) => {
                if (e.target.classList.contains('remove-answer')) {
                    e.target.closest('.answer-item').remove();
                }
            });
        });
    </script>
}
