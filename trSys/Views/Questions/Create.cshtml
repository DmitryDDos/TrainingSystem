@model trSys.DTOs.QuestionCreateDto

@{
    ViewData["Title"] = $"Новый вопрос для теста #{Model.TestId}";
}

<link rel="stylesheet" href="~/css/module_style.css" asp-append-version="true" />

<div class="container vh-100 d-flex justify-content-center align-items-center">
    <div class="form-container" style="width: 100%; max-width: 700px;">
        <h2 class="text-center mb-4">@ViewData["Title"]</h2>

        <form asp-action="Create" method="post" novalidate>
            <input type="hidden" asp-for="TestId" />

            <div class="mb-3">
                <label asp-for="Text" class="form-label">Текст вопроса *</label>
                <textarea asp-for="Text" class="form-control" rows="3" required></textarea>
                <span asp-validation-for="Text" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Type" class="form-label">Тип вопроса *</label>
                <select asp-for="Type" class="form-select"
                        asp-items="Html.GetEnumSelectList<trSys.Enums.QuestionType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>

            <h4>Ответы</h4>
            <div id="answers-container" class="mb-3">
                <!-- Ответы будут добавляться через JS -->
            </div>

            <button type="button" id="add-answer" class="btn btn-outline-primary mb-3">
                <span class="icon">+</span> Добавить ответ
            </button>

            <div class="d-flex gap-2 justify-content-center">
                <button type="submit" class="module-btn module-btn-primary">
                    <svg class="save-icon" viewBox="0 0 24 24" width="18" height="18">
                        <path fill="#ffffff" d="M15 9H5V5h10m-3 14a3 3 0 0 1-3-3 3 3 0 0 1 3-3 3 3 0 0 1 3 3 3 3 0 0 1-3 3m5-16H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V7l-4-4z" />
                    </svg> Сохранить
                </button>
                <a asp-controller="Tests" asp-action="ManageQuestions" asp-route-testId="@Model.TestId"
                   class="module-btn module-btn-secondary">
                    <span class="icon">✕</span> Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.getElementById('answers-container');
            const addBtn = document.getElementById('add-answer');
            let counter = 0;

            addBtn.addEventListener('click', function() {
                const div = document.createElement('div');
                div.className = 'answer-item mb-2 p-2 border rounded';
                div.innerHTML = `
                    <div class="row align-items-center">
                        <div class="col-7">
                            <input name="Answers[${counter}].Text" class="form-control"
                                   placeholder="Текст ответа" required />
                        </div>
                        <div class="col-3">
                            <div class="form-check form-switch">
                                <input type="checkbox" name="Answers[${counter}].IsCorrect" value="true" />
                                <label class="form-check-label">Правильный</label>
                            </div>
                        </div>
                        <div class="col-2 text-end">
                            <button type="button" class="btn btn-sm btn-danger remove-answer">
                                <span class="icon">✕</span>
                            </button>
                        </div>
                    </div>
                `;
                container.appendChild(div);
                counter++;
            });

            container.addEventListener('click', function(e) {
                // Ищем ближайший элемент с классом remove-answer, начиная с e.target
                const btn = e.target.closest('.remove-answer');
                if (btn) {
                    btn.closest('.answer-item').remove();
                }
            });
        });
    </script>
}
