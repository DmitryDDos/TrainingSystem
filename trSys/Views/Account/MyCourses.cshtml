@model trSys.Models.MyCourses
@{
    Layout = "_Layout"; // Используем общий макет
    ViewData["Title"] = "Мои курсы";
}

<!-- Подключение стилей (если не подключено в _Layout.cshtml) -->
<link rel="stylesheet" href="/css/mycourses_style.css" />

<!-- Боковая панель -->
<aside class="sidebar">
    <div class="user-profile">
        <div class="user-avatar">
            @* Условие для отображения аватара или текста "Нет фото" *@
            @if (/* Условие для проверки наличия аватара, например, Model.HasAvatar() */ false) // Замените на ваше условие
            {
                <img src="path_to_avatar.jpg" alt="Аватар пользователя" /> <!-- Укажите путь к аватару -->
            }
            else
            {
                <div class="avatar-placeholder">Нет фото</div>
            }
        </div>
        <h2 class="user-name">Евдоким Петров</h2>
    </div>

    <nav class="sidebar-nav">
        <a href="#" class="sidebar-link">📚 Мои курсы</a>
        <a href="#" class="sidebar-link">📈 Прогресс</a>
        <a href="#" class="sidebar-link">⚙️ Настройки</a>
    </nav>
</aside>

<!-- Основной контент -->
<main class="main-content">
    <h1 class="page-title">Мои курсы</h1>

    <div class="courses-grid">
        <!-- Карточка курса 1 -->
        <article class="course-card">
            <h3 class="course-title">Современная веб-разработка</h3>
            <p class="course-description">Полный курс по JavaScript, React и Node.js</p>
            <a href="#" class="button">Начать курс</a>
        </article>

        <!-- Карточка курса 2 -->
        <article class="course-card">
            <h3 class="course-title">Data Science с нуля</h3>
            <p class="course-description">Python, машинное обучение и анализ данных</p>
            <a href="#" class="button">Начать курс</a>
        </article>
    </div>
</main>

<!-- Мобильная навигация -->
<div class="mobile-nav hidden">
    <!-- Контент мобильного меню -->
</div>
